              </select>
              <i class="fas fa-angle-down fa-2x"></i>
            </div>
          </div>
          <div class="form-group">
            <label for="city">市区町村</label>
            <span class="form-arbitrary">任意</span>
            <input type="text" name="city" placeholder="例)横浜市緑区" class="input-default" value="中央区銀座">
          </div>
          <div class="form-group">
            <label for="address-number">番地</label>
            <span class="form-arbitrary">任意</span>
            <input type="text" name="address-number" placeholder="例)青山1-1-1" class="input-default" value="1-2-3">
